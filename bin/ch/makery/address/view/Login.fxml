<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.view.LoginController">
   <children>
      <GridPane layoutX="30.0" layoutY="72.0" snapToPixel="false" vgap="50.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="336.0" minWidth="10.0" prefWidth="303.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="496.0" minWidth="10.0" prefWidth="343.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label prefHeight="54.0" prefWidth="227.0" text="Username:" textAlignment="CENTER">
               <font>
                  <Font size="39.0" />
               </font>
            </Label>
            <Label text="Password:" GridPane.rowIndex="1">
               <font>
                  <Font size="39.0" />
               </font>
            </Label>
            <Label fx:id="lblError" prefHeight="82.0" prefWidth="302.0" text="The username and/or password you typed don't match the ones in the database!" textFill="RED" visible="false" wrapText="true" GridPane.rowIndex="2" />
            <Button fx:id="btnLogin" mnemonicParsing="false" prefHeight="42.0" prefWidth="352.0" text="Login" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="tfUsername" promptText="Enter your username..." GridPane.columnIndex="1" />
            <PasswordField fx:id="pwfAgents" promptText="Enter your password..." GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <Label layoutX="251.0" text="Welcome!">
         <font>
            <Font name="System Bold" size="45.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
